# Supabase Configuration
# Obtenha suas credenciais em: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# Resend API (envio de emails)
# Obtenha sua chave em: https://resend.com/api-keys
RESEND_API_KEY=re_sua-chave-resend-aqui

# Email de contato (para onde serão enviadas as mensagens do formulário)
CONTACT_EMAIL=contato@suaigreja.com.br

# Feature Flags (para rollback rápido)
# ATENÇÃO: Em produção, manter todas como 'true' para máxima segurança
# Apenas desabilitar em caso de emergência para rollback

# Middleware de autenticação (protege rotas /admin/*)
# true = Middleware ativo (RECOMENDADO)
# false = Bypass do middleware (apenas para rollback de emergência)
NEXT_PUBLIC_USE_MIDDLEWARE_AUTH=true

# Rate limiting na API de contato
# true = Limite de 3 requests/hora por IP (RECOMENDADO)
# false = Sem limite (apenas para testes)
NEXT_PUBLIC_USE_RATE_LIMITING=true

# Modo de debug (logs extras)
# true = Logs adicionais no console
# false = Apenas logs críticos (RECOMENDADO em produção)
NEXT_PUBLIC_DEBUG_MODE=false
